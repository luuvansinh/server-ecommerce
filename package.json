{
  "name": "admin-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js --exec \"DEBUG=App node -r dotenv/config -r babel-register\"",
    "start": "nodemon app.js --exec \"NODE_ENV=production node -r dotenv/config -r babel-register\"",
    "test": "NODE_ENV=test nyc --show-process-tree mocha ./src/**/*.test.js --require=dotenv/config --require babel-core/register --timeout 20000 --slow 500 --exit",
    "lint": "eslint --ext .js src",
    "precommit-msg": "echo 'Pre-commit checks ...' && exit 0",
    "precommit": "npm run lint",
    "apidoc": "apidoc -i src/ -o apidoc"
  },
  "pre-commit": [
    "precommit-msg",
    "precommit"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "apidoc": {
    "name": "Server API",
    "version": "1.0.0",
    "description": "Dev: http://125.212.219.219:5070 \n Prod: https://admin-api.zody.vn",
    "title": "Server API"
  },
  "nyc": {
    "exclude": [
      "src/multi-cores.js"
    ]
  },
  "nodemonConfig": {
    "verbose": false,
    "ignore": [
      "node_modules",
      "src/files",
      "logs"
    ],
    "ext": "js"
  },
  "dependencies": {
    "cluster": "^0.7.7",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "debug": "^4.0.1",
    "diacritics": "^1.3.0",
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.1.1",
    "express": "~4.16.0",
    "farmhash": "^2.0.5",
    "gm": "^1.23.1",
    "helmet": "^3.12.0",
    "http-status-codes": "^1.3.0",
    "immutable": "^3.8.2",
    "ioredis": "^4.0.0",
    "ip": "^1.1.5",
    "joi": "^13.2.0",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.17.5",
    "method-override": "^3.0.0",
    "moment": "^2.21.0",
    "mongoose": "^5.3.13",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "~1.9.0",
    "multer": "^1.3.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "slug": "^0.9.3",
    "winston": "^3.0.0",
    "winston-loggly-bulk": "^2.0.3",
    "xss": "^1.0.3"
  },
  "devDependencies": {
    "ajv": "^6.5.4",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "chalk": "^2.4.1",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.24.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.11.1",
    "faker": "^4.1.0",
    "nyc": "^13.0.1",
    "pre-commit": "^1.2.2"
  }
}
